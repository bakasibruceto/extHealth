{
  "manifest_version": 3,
  "name": "eXtHealth",
  "version": "1.0.0",
  "description": "This extension will help you to track your health",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "storage", "notifications", "contextMenus", "alarms", "tabs"],
  "background": {
    "service_worker": "background.js",
    "persistent": true
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.x.com/*"
  ],
  "content_security_policy": {
    "extension_pages": 
      "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
      
  },
  "web_accessible_resources": [
    {
      "resources": ["iconCheckThisOut.png"],
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"]
    }
  ]
}
