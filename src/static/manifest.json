{
  "manifest_version": 3,
  "name": "eXtHealth",
  "version": "1.0.0",
  "description": "This extension will help you to track your health",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*", "*://*.example.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_security_policy": {
    "extension_pages": 
      "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
      
  }
}
